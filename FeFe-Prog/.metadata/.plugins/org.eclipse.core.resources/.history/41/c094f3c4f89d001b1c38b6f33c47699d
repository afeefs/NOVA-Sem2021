	public void fileScanner(String[] array, File txt) throws Exception {
		String[] txtArray = new String[30];
		int index = 0;
		Scanner fIn = new Scanner(txt);
		while(fIn.hasNext()){
			txtArray[index] = fIn.nextLine();
			index++;
		}
